# Example environment variables for Workflow AI Backend
# Copy to .env.dev or .env.prod and adjust values

# Database - Use Supabase connection string
DATABASE_URL=

# Supabase
SUPABASE_JWT_SECRET=

# Frontend URL
FRONTEND_BASE_URL=

# Google Cloud Storage (optional)
GCS_BUCKET=

# OpenAI API (optional)
OPENAI_API_KEY=

# CORS origins (comma-separated). Use * to allow all (dev only)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,*

# App port
PORT=8000

# Composio stuff
COMPOSIO_API_KEY=
COMPOSIO_TOOLKITS=GMAIL,GOOGLE_DRIVE,SLACK
COMPOSIO_AUTH_CONFIGS={"GMAIL":"authcfg_abc","SLACK":"authcfg_def","GITHUB":"authcfg_ghi"}

GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=